SET(CMAKE_MACOSX_RPATH 1)
SET(CMAKE_CXX_STANDARD 11)

IF(WIN32)
	ADD_COMPILE_OPTIONS(/wd4275 /wd4251)
ENDIF(WIN32)

INCLUDE_DIRECTORIES(
	${CMAKE_CURRENT_SOURCE_DIR}
	${CMAKE_CURRENT_SOURCE_DIR}/java/org/eclipse/keyple

    # Example generic common
    ${CMAKE_CURRENT_SOURCE_DIR}/../../../../generic/common/src/main/java/org/eclipse/keyple/example/generic/common
    
    # Example generic pc
    ${CMAKE_CURRENT_SOURCE_DIR}/../../../../generic/pc/src/main/java/org/eclipse/keyple/example/generic/pc
    
	# Example calypso common
	${CMAKE_CURRENT_SOURCE_DIR}/../../../common/src/main/java/org/eclipse/keyple/example/calypso/common
    ${CMAKE_CURRENT_SOURCE_DIR}/../../../common/src/main/java/org/eclipse/keyple/example/calypso/common/postructure
    ${CMAKE_CURRENT_SOURCE_DIR}/../../../common/src/main/java/org/eclipse/keyple/example/calypso/common/transaction

	# Core
	${CMAKE_CURRENT_SOURCE_DIR}/../../../../../component/keyple-common/src/main/java/org/eclipse/keyple/common
    ${CMAKE_CURRENT_SOURCE_DIR}/../../../../../component/keyple-core/src/main/java/org/eclipse/keyple/core/command
    ${CMAKE_CURRENT_SOURCE_DIR}/../../../../../component/keyple-core/src/main/java/org/eclipse/keyple/core/selection
	${CMAKE_CURRENT_SOURCE_DIR}/../../../../../component/keyple-core/src/main/java/org/eclipse/keyple/core/seproxy
	${CMAKE_CURRENT_SOURCE_DIR}/../../../../../component/keyple-core/src/main/java/org/eclipse/keyple/core/seproxy/event
	${CMAKE_CURRENT_SOURCE_DIR}/../../../../../component/keyple-core/src/main/java/org/eclipse/keyple/core/seproxy/exception
    ${CMAKE_CURRENT_SOURCE_DIR}/../../../../../component/keyple-core/src/main/java/org/eclipse/keyple/core/seproxy/message
	${CMAKE_CURRENT_SOURCE_DIR}/../../../../../component/keyple-core/src/main/java/org/eclipse/keyple/core/seproxy/plugin
    ${CMAKE_CURRENT_SOURCE_DIR}/../../../../../component/keyple-core/src/main/java/org/eclipse/keyple/core/seproxy/protocol
	${CMAKE_CURRENT_SOURCE_DIR}/../../../../../component/keyple-core/src/main/java/org/eclipse/keyple/core/util

	# Plugin - PC/SC
	${CMAKE_CURRENT_SOURCE_DIR}/../../../../../component/keyple-plugin/pcsc/src/main/java/org/eclipse/keyple/plugin/pcsc

	# Smartcard I/O
	${CMAKE_CURRENT_SOURCE_DIR}/../../../../../component/keyple-smartcardio/src/main/java/org/eclipse/keyple/smartcardio
	
	# Calypso
    ${CMAKE_CURRENT_SOURCE_DIR}/../../../../../component/keyple-calypso/src/main/java/org/eclipse/keyple/calypso/command
	${CMAKE_CURRENT_SOURCE_DIR}/../../../../../component/keyple-calypso/src/main/java/org/eclipse/keyple/calypso/command/po
    ${CMAKE_CURRENT_SOURCE_DIR}/../../../../../component/keyple-calypso/src/main/java/org/eclipse/keyple/calypso/command/po/builder
    ${CMAKE_CURRENT_SOURCE_DIR}/../../../../../component/keyple-calypso/src/main/java/org/eclipse/keyple/calypso/command/po/parser
    ${CMAKE_CURRENT_SOURCE_DIR}/../../../../../component/keyple-calypso/src/main/java/org/eclipse/keyple/calypso/command/sam
    ${CMAKE_CURRENT_SOURCE_DIR}/../../../../../component/keyple-calypso/src/main/java/org/eclipse/keyple/calypso/command/sam/builder
    ${CMAKE_CURRENT_SOURCE_DIR}/../../../../../component/keyple-calypso/src/main/java/org/eclipse/keyple/calypso/command/sam/parser
    ${CMAKE_CURRENT_SOURCE_DIR}/../../../../../component/keyple-calypso/src/main/java/org/eclipse/keyple/calypso/transaction
    ${CMAKE_CURRENT_SOURCE_DIR}/../../../../../component/keyple-calypso/src/main/java/org/eclipse/keyple/calypso/transaction/exception

	# pcsc (Linux / macOS)
	/usr/include/PCSC
)

IF(WIN32)
	SET(CMAKE_FIND_LIBRARY_PREFIXES "")
	SET(CMAKE_FIND_LIBRARY_SUFFIXES ".dll")
	SET(CMAKE_BUILD_DIRECTORY "${CMAKE_CURRENT_BINARY_DIR}/../../../../..")
	SET(WINSCARD winscard.lib)
ENDIF(WIN32)

IF(APPLE)
	SET(CMAKE_FIND_LIBRARY_PREFIXES "lib")
	SET(CMAKE_FIND_LIBRARY_SUFFIXES ".dylib")
	SET(CMAKE_BUILD_DIRECTORY "${CMAKE_CURRENT_BINARY_DIR}/../../../../..")
	SET(WINSCARD "-framework PCSC")
ENDIF(APPLE)

IF(UNIX)
	FIND_LIBRARY(WINSCARD pcsclite)
ENDIF(UNIX)

ADD_EXECUTABLE(usecase_calypso3_rev1selection_pcsc

	# Example - Common
    ${CMAKE_CURRENT_SOURCE_DIR}/../../../../generic/common/src/main/java/org/eclipse/keyple/example/generic/common/AbstractReaderObserverEngine.cpp
    ${CMAKE_CURRENT_SOURCE_DIR}/../../../../generic/pc/src/main/java/org/eclipse/keyple/example/generic/pc/PcscReadersSettings.cpp
    ${CMAKE_CURRENT_SOURCE_DIR}/../../../../generic/pc/src/main/java/org/eclipse/keyple/example/generic/pc/ReaderUtilities.cpp
    ${CMAKE_CURRENT_SOURCE_DIR}/../../../common/src/main/java/org/eclipse/keyple/example/calypso/common/postructure/CalypsoClassicInfo.cpp
    ${CMAKE_CURRENT_SOURCE_DIR}/../../../common/src/main/java/org/eclipse/keyple/example/calypso/common/transaction/CalypsoUtilities.cpp
	${CMAKE_CURRENT_SOURCE_DIR}/../../../common/src/main/java/org/eclipse/keyple/example/calypso/common/transaction/CalypsoClassicTransactionEngine.cpp

	# Example - PC
    ${CMAKE_CURRENT_SOURCE_DIR}/java/org/eclipse/keyple/example/calypso/pc/PcscReadersSettings.cpp
	${CMAKE_CURRENT_SOURCE_DIR}/java/org/eclipse/keyple/example/calypso/pc/UseCase_Calypso3_Rev1Selection_Pcsc.cpp
)

TARGET_LINK_LIBRARIES(usecase_calypso3_rev1selection_pcsc keyplepluginpcsc keyplecore keyplesmartcardio keyplecalypso ${WINSCARD})
